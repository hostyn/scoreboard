---
interface Props {
	title: string;
}

const { title } = Astro.props;
import '@material/web/typography/md-typescale-styles.css';

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<header class="bg-surface h-16 flex items-center px-4">
			<h1 class="text-3xl font-bold md-typescale-title-large">Games</h1>
		</header>
		<main class="w-[800px] max-w-full min-h-[calc(100vh-theme(spacing.16))] p-4 flex flex-col gap-8 mx-auto">
			<slot />
		</main>
	</body>
</html>
<style is:global>
	@tailwind base;
	@tailwind components;
	@tailwind utilities;

	@font-face {
  font-family: 'RobotoFlex';
  src: url('/fonts/RobotoFlex.ttf') format('ttf');
}

	html {
		@apply text-onSurface bg-surfaceContainerLowest;
	}

	input[type=number]::-webkit-inner-spin-button {
  	-webkit-appearance: none;
	}

	:root {
		--md-ref-typeface-brand: 'RobotoFlex', sans-serif;
		--md-ref-typeface-plain: 'RobotoFlex', sans-serif;
	}
</style>
